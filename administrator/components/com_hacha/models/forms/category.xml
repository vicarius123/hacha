<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		
        <field name="id"
		type="text"
		default="0"
		label="COM_HACHA_FORM_LBL_CATEGORY_ID"
		readonly="true"
		class="readonly"
		description="JGLOBAL_FIELD_ID_DESC"
		/> 
		
		
		<field name="title"
		type="text"
		label="Название"
		description="COM_HACHA_FORM_DESC_CATEGORY_TITLE" 
		/> 
		
		
		<field name="image"
		type="media"
		label="Картинка"
		description="COM_HACHA_FORM_DESC_CATEGORY_IMAGE" 
		
		/> 
		
		<field name="order"
		type="text"
		size="40"
		class="inputbox"
		label="COM_HACHA_FORM_LBL_CATEGORY_ORDER"
		description="COM_HACHA_FORM_DESC_CATEGORY_ORDER" 
		filter="safehtml"
		/> 
		
		
		<field name="title_ru"
		type="text"
		label="COM_HACHA_FORM_LBL_CATEGORY_TITLE_RU"
		description="COM_HACHA_FORM_DESC_CATEGORY_TITLE_RU" 
		/> 
		
		
		<field name="title_en"
		type="text"
		label="Название"
		description="COM_HACHA_FORM_DESC_CATEGORY_TITLE_EN" 
		/> 
		
		<field name="delivery" type="radio" default="0" label="Доставка" description="">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</field>
		
		<field name="enable"
		type="text"
		size="40"
		class="inputbox"
		label="COM_HACHA_FORM_LBL_CATEGORY_ENABLE"
		description="COM_HACHA_FORM_DESC_CATEGORY_ENABLE" 
		filter="safehtml"
		/> 
		
		
		<field name="created_by"
		type="createdby"
		default=""
		label="COM_HACHA_FORM_LBL_CATEGORY_CREATED_BY"
		description="COM_HACHA_FORM_DESC_CATEGORY_CREATED_BY" 
		/> 
		
		
		<field name="version_note"
		type="text"
		label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
		description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
		class="inputbox"
		size="45"
		labelclass="control-label"
		/> 
		
		
		<field name="state"
		type="list"
		label="JSTATUS"
		description="JFIELD_PUBLISHED_DESC"
		class="inputbox"
		size="1"
		default="0"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field> 
		
		
		<field name="checked_out"
		type="hidden"
		filter="unset"
		/>
		
		<field name="checked_out_time"
		type="hidden"
		filter="unset"
		/>
		
	</fieldset>
	
</form>
