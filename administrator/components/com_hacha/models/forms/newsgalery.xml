<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

        <field name="id"
			type="text"
			default="0"
			label="COM_HACHA_FORM_LBL_NEWSGALERY_ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
		/> 

 <field name="news_id"
			type="text"
			size="40"
			class="inputbox"
			label="COM_HACHA_FORM_LBL_NEWSGALERY_NEWS_ID"
			description="COM_HACHA_FORM_DESC_NEWSGALERY_NEWS_ID" 
			filter="safehtml"
		/> 

 
		<field name="image"
			type="text"
			label="COM_HACHA_FORM_LBL_NEWSGALERY_IMAGE"
			description="COM_HACHA_FORM_DESC_NEWSGALERY_IMAGE" 
		/> 

 
		<field name="title"
			type="text"
			label="COM_HACHA_FORM_LBL_NEWSGALERY_TITLE"
			description="COM_HACHA_FORM_DESC_NEWSGALERY_TITLE" 
		/> 

 
		<field name="title_ru"
			type="text"
			label="COM_HACHA_FORM_LBL_NEWSGALERY_TITLE_RU"
			description="COM_HACHA_FORM_DESC_NEWSGALERY_TITLE_RU" 
		/> 

 
		<field name="title_en"
			type="text"
			label="COM_HACHA_FORM_LBL_NEWSGALERY_TITLE_EN"
			description="COM_HACHA_FORM_DESC_NEWSGALERY_TITLE_EN" 
		/> 

 
		<field name="created_by"
			type="createdby"
			default=""
			label="COM_HACHA_FORM_LBL_NEWSGALERY_CREATED_BY"
			description="COM_HACHA_FORM_DESC_NEWSGALERY_CREATED_BY" 
		/> 

 
		<field name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
			labelclass="control-label"
		/> 

 
		<field name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="0"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field> 

 
		<field name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field name="checked_out_time"
			type="hidden"
			filter="unset"
		/>

	</fieldset>

</form>
